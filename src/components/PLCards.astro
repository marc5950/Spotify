---
import PLCard from "./PLCard.astro";
---

<div class="PLCards">
  <div class="btn">
    <button>Alle</button><button>Musik</button><button>Podcasts</button>
  </div>
  <div class="Cards">
    <PLCard
      artist="KESI"
      album="https://via.assets.so/album.png?id=1&q=95&w=360&h=360&fit=fill"
    />
    <PLCard
      artist="Gilli"
      album="https://via.assets.so/album.png?id=2&q=95&w=360&h=360&fit=fill"
    />
    <PLCard
      artist="Post Malone"
      album="https://via.assets.so/album.png?id=3&q=95&w=360&h=360&fit=fill"
    />
    <PLCard
      artist="Drake"
      album="https://via.assets.so/album.png?id=4&q=95&w=360&h=360&fit=fill"
    />
    <PLCard
      artist="Lady Gaga"
      album="https://via.assets.so/album.png?id=5&q=95&w=360&h=360&fit=fill"
    />
    <PLCard
      artist="TopGunn"
      album="https://via.assets.so/album.png?id=6&q=95&w=360&h=360&fit=fill"
    />
  </div>

  <style>
    .PLCards {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 3rem 1rem;
      color: whitesmoke;
    }
    .btn {
      display: flex;
      gap: 1rem;
    }
    button {
      padding: 0.5rem 0.7rem;
      color: gray;
      border: none;
      border-radius: 20px;
    }
    button:hover {
      background-color: #555;
    }
    .Cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
      gap: 10px;
    }
  </style>
</div>
