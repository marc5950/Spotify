---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
  button {
    padding: 0.5rem 2rem;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
  }
  .primary {
    background-color: blue;
    color: white;
  }
  .small {
    font-size: 0.75rem;
  }
</style>
